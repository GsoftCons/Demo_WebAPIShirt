@model List<Shirt>

 <div class="text-danger" asp-validation-summary="All"></div>

<h3>Shirt</h3>
<br/>
@if(Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Code</td>
                <td>Brand</td>
                <td>Gender</td>
                <td>Color</td>
                <td>Size</td>
                <td>Prize</td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var shirt in Model)
            {
                <tr>
                    <td>@shirt.ShirtId</td>
                    <td>@shirt.Brand</td>
                    <td>@shirt.Gender</td>
                    <td>@shirt.Color</td>
                    <td>@shirt.Size</td>
                    <td>@(shirt.Price.ToString("c"))</td>
                    <td>
                        <a class="btn btn-link" asp-controller="shirts" asp-action="updateshirt" asp-route-id="@shirt.ShirtId">Edit</a>
                    </td>
                    <td>
                        <form method="post" asp-controller="shirts" asp-action="deleteshirt" onsubmit="return confirm('Are you sure you want to delete this shirt?');">
                            <input type="hidden" name="id" value="@shirt.ShirtId" />
                            <button type="submit" class="btn btn-link">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary" asp-controller="shirts" asp-action="CreateShirt">Create New Shirt</a>